---
import Links from '@/utils/layout'
const sha = (import.meta.env.PUBLIC_COMMIT_SHA ?? 'local')
const url = `https://github.com/PoApper/homepage-renewal/commit/${sha}`
const shortSha = sha.slice(0, 7)
---

<footer
  class="w-full h-[100px] md:h-[150px] bg-gray-200/50 py-2 md:py-[25px] mt-4 md:mt-8"
>
  <div class="absolute inset-x-0 visible md:invisible my-2">
    <img class="w-11 mx-auto" src="/logo.png" alt="PoApper Logo" />
    <p class="font-bold text-center">© 2024 PoApper</p>
    <p class="text-center text-xs text-gray-500">
      commit:
      <a href={url} target="_blank" rel="noopener noreferrer" class="underline">
        {shortSha}
      </a>
    </p>
  </div>
  <div class="invisible md:visible grid grid-cols-4 mr-20">
    <div>
      <img class="w-11 mx-auto" src="/logo.png" alt="PoApper Logo" />
      <p class="font-bold text-center">© 2024 PoApper</p>
      <p class="text-center text-xs text-gray-500">
        commit:
        <a href={url} target="_blank" rel="noopener noreferrer" class="underline">
          {shortSha}
        </a>
      </p>
    </div>
    {
      Links.footerLinks.map((section) => {
        return (
          <div class="mx-auto">
            <div class="font-bold">{section.section}</div>
            <div class="md:pt-3">
              {section.links.map((link, _) => {
                return (
                  <div>
                    <a class="font-bold" href={link.url}>
                      {link.name}
                    </a>
                    <br />
                  </div>
                )
              })}
            </div>
          </div>
        )
      })
    }
  </div>
</footer>
