---
const { seminar } = Astro.props;
---

{
  () => {
    if (seminar.url == "#") {
      return (
        <div class="transition ease-in-out delay-100 hover:-translate-y-1 hover:scale-105 duration-300">
          <div class="pl-2">{seminar.name} Seminar</div>
          <div class="transision delay-100 bg-[#f0f0f0] hover:bg-[#f0f0f0]/50 rounded-[10px] flex justify-around">
            {seminar.images.map((src: string) => {
              return (
                <img
                  class="w-[80px] sm:w-[100px] md:w-[150px] py-[20px] px-[20px]"
                  src={`../../../${src}`}
                />
              );
            })}
          </div>
        </div>
      );
    } else {
      return (
        <a href={seminar.url} target="_blank" rel="noopener noreferrer">
          <div class="transition ease-in-out delay-100 hover:-translate-y-1 hover:scale-105 duration-300">
            <div class="pl-2">{seminar.name} Seminar</div>
            <div class="transision delay-100 bg-[#f0f0f0] hover:bg-[#f0f0f0]/50 rounded-[10px] flex justify-around">
              {seminar.images.map((src: string) => {
                return (
                  <img
                    class="w-[80px] sm:w-[100px] md:w-[150px] py-[20px] px-[20px]"
                    src={`../../../${src}`}
                  />
                );
              })}
            </div>
          </div>
        </a>
      );
    }
  }
}
